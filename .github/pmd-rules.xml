<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Custom PMD 7.14.0 Ruleset"
         xmlns="https://pmd.github.io/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://pmd.github.io/ruleset/2.0.0 https://pmd.github.io/ruleset_2_0_0.xsd"
         language="java"
         description="Custom PMD ruleset for Java aligned with PMD 7.14.0">

  <!-- Design rules -->
  <rule ref="category/java/design.xml/SimplifyBooleanReturns" />
  <rule ref="category/java/design.xml/UseUtilityClass" />

  <!-- Code style -->
  <rule ref="category/java/codestyle.xml/ShortClassName" />
  <rule ref="category/java/codestyle.xml/UnnecessaryConstructor" />
  <rule ref="category/java/codestyle.xml/MethodArgumentCouldBeFinal" />

  <!-- Error prone -->
  <rule ref="category/java/errorprone.xml/EmptyCatchBlock" />

  <!-- Best practices -->
  <rule ref="category/java/bestpractices.xml/UseTryWithResources" />
  <rule ref="category/java/bestpractices.xml/AvoidPrintStackTrace" />
  <rule ref="category/java/bestpractices.xml/UnusedImports" />
  
</ruleset>
